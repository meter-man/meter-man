<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Dashboard</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-table fa-lg fa-fw"></i> Electricity Readings
        <div class="pull-right">
          <div class="btn-group">
            <%= button_to 'Add Reading', new_reading_path, method: :get, class: 'btn btn-default btn-xs' %>
          </div>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Reading</th>
                <th>Cost</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @readings.each do |reading, cost| %>
                <tr>
                  <td><%= reading.reading_date %></td>
                  <td><%= reading.reading %></td>
                  <td><%= number_to_currency(cost) %></td>
                  <td><%= link_to 'Show', reading %></td>
                  <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
                  <td><%= link_to 'Destroy', reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <%= will_paginate @readings %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-6 -->

  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-line-chart fa-lg fa-fw"></i> Electricity Readings Plot
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <svg id="line-plot"></svg>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-6 -->
</div>
<!-- /.row -->
